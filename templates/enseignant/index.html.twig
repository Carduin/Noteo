{% extends 'base.html.twig' %}

{% block tirePage %}Liste des enseignants{% endblock %}

{% block enseignants %}active{% endblock %}

{% block contenu %}

    <table class="table" id="table">
        <thead>
            <tr>

                <th>Nom</th>
                <th>Prenom</th>
                <th>Mail</th>
                <th>Administrateur</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
        {% if enseignants is not empty %}
        {% for enseignant in enseignants %}
            <tr>

                <td>{{ enseignant.nom }}</td>
                <td>{{ enseignant.prenom }}</td>
                <td>{{ enseignant.mail }}</td>
                <td>{{ enseignant.estAdmin ? 'Oui' : 'Non' }}</td>
                <td>
                    <a href="{{ path('enseignant_show', {'id': enseignant.id}) }}"><i class="icon-eye"></i></a>
                    <a href="{{ path('enseignant_edit', {'id': enseignant.id}) }}"><i class="icon-pencil-1"></i></a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        {% endif %}
        </tbody>
    </table>

    <a href="{{ path('enseignant_new') }}">Create new</a>
{% endblock %}

{% block datatables %}

<script type="text/javascript">
$(document).ready(function() {
  $('#table').dataTable({
    language: {
      "url": "{{asset('tradfr.json')}}"
    },
    order: [
      [0, "asc"]
    ],
    columns: [null, null, {"orderable": false},null, {"orderable": false}],
    lengthMenu: [
      [10, 25, 50, -1],
      [10, 25, 50, "Tout"]
    ],
    info: false,
  });
});
</script>

{% endblock %}
