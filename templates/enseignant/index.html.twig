{% extends 'admin_base.html.twig' %}

{% block tirePage %}Liste des enseignants{% endblock %}

{% block enseignants %}active{% endblock %}

{% block contenu %}

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nom</th>
                <th>Prenom</th>
                <th>Mail</th>
                <th>EstAdmin</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for enseignant in enseignants %}
            <tr>
                <td>{{ enseignant.id }}</td>
                <td>{{ enseignant.nom }}</td>
                <td>{{ enseignant.prenom }}</td>
                <td>{{ enseignant.mail }}</td>
                <td>{{ enseignant.estAdmin ? 'Yes' : 'No' }}</td>
                <td>
                    <a href="{{ path('enseignant_show', {'id': enseignant.id}) }}">show</a>
                    <a href="{{ path('enseignant_edit', {'id': enseignant.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('enseignant_new') }}">Create new</a>
{% endblock %}
