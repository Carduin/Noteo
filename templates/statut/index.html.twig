{% extends 'base.html.twig' %}

{% block titrePage %}Liste des statuts étudiants{% endblock %}

{% block statutsEtudiants %}active{% endblock %}

{% block contenu %}

{% if statuts is not empty %}

<div class='bouton'>
    <a class="d-none d-sm-inline-block btn btn-sm btn-primary shadow-sm" href="{{ path('statut_new') }}">Créer un statut étudiant</a>
</div>
    <table class="table" id="table">
        <thead>
            <tr>
                <th>Nom</th>
                <th>Description</th>
                <th>Créateur</th>
                <th></th>
            </tr>
        </thead>
        <tbody>

        {% for statut in statuts %}
            <tr>
                <td>{{ statut.nom }}</td>
                <td>{{ statut.description }}</td>
                <td>{{ statut.enseignant.nom}} {{ statut.enseignant.prenom}}</td>
                <td>
                    <a href="{{ path('statut_show', {'slug': statut.slug}) }}"><i class="icon-eye" data-toggle='tooltip' title='Consulter {{ statut.nom }}'></i></a>
                    {% if statut.enseignant.id == app.user.id or is_granted('ROLE_ADMIN') %}
                    <a href="{{ path('statut_edit', {'slug': statut.slug}) }}"><i class="icon-pencil-1" data-toggle='tooltip' title='Modifier {{ statut.nom }}'></i></a>
                    <a href="#" onclick="supprimerStatutEtudiant('{{ path('statut_delete', {'slug': statut.slug}) }}')"><i class="icon-trash" data-toggle='tooltip' title='Supprimer {{ statut.nom }}'></i></a>
                    {% endif %}
                </td>
            </tr>
        {% endfor %}

        </tbody>
    </table>

{% else %}

<div class="info">
  <h1 class="h4 mb-0 text-gray-800">Vous n'avez aucun statut</h1>
</div>

<div class='bouton'>
  <a class="d-none d-sm-inline-block btn btn-sm btn-primary shadow-sm" onclick="location.href='{{ path('statut_new') }}'">Créer un statut étudiant</a>
</div>

{% endif %}
    <div class="modal fade" id="delStatutEtudiant" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
      <div class="modal-dialog" role="document">
        <div class="modal-content">
          <div class="modal-header">
            <h5 class="modal-title" id="exampleModalLabel">Avertissement</h5>
            <button class="close" type="button" data-dismiss="modal" aria-label="Close">
              <span aria-hidden="true">x</span>
            </button>
          </div>
          <div class="modal-body">Etes vous sur de vouloir supprimer le staut d'étudiant ? </div>
          <div class="modal-footer">
            <button class="d-none d-sm-inline-block btn btn-sm btn-secondary shadow-sm bouton" type="button" data-dismiss="modal">Annuler</button>
            <a class="d-none d-sm-inline-block btn btn-sm btn-primary shadow-sm bouton" id = "BoutonSupprimerModale" href="#">Supprimer le statut d'étudiant</a>
          </div>
        </div>
      </div>
    </div>

    <script type="text/javascript">

    function supprimerStatutEtudiant(url) {
      $("#delStatutEtudiant").modal();
      document.getElementById("BoutonSupprimerModale").href = url;
    }

    </script>

{% endblock %}


{% block datatables %}

<script type="text/javascript">
$(document).ready(function() {
  $('#table').dataTable({
    language: {
      // Suppression du label Rechercher et ajout du placeholder
      search: "_INPUT_",
      searchPlaceholder: "Rechercher...",
      "url": "{{asset('tradfr.json')}}"
    },
    order: [
      [0, "asc"]
    ],
    columns: [null, {"orderable": false},null,{"orderable": false}],
    lengthMenu: [
      [10, 25, 50, -1],
      [10, 25, 50, "Tout"]
    ],
    info: false,
  });
});
</script>

{% endblock %}
