{% extends 'base.html.twig' %}

{% block tirePage %}Liste des statuts étudiants{% endblock %}

{% block statutsEtudiants %}active{% endblock %}

{% block contenu %}

<div class='bouton'>
    <button class="d-none d-sm-inline-block btn btn-sm btn-primary shadow-sm" onclick="location.href='{{ path('statut_new') }}'">Créer un statut étudiant</button>
</div>

    <table class="table" id="table">
        <thead>
            <tr>
                <th>Nom</th>
                <th>Description</th>
                <th>Createur</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
        {% if statuts is not empty %}
        {% for statut in statuts %}
            <tr>
                <td>{{ statut.nom }}</td>
                <td>{{ statut.description }}</td>
                <td>{{ statut.enseignant.nom}} {{ statut.enseignant.prenom}}</td>
                <td>
                    <a href="{{ path('statut_show', {'id': statut.id}) }}"><i class="icon-eye"></i></a>
                    <a href="{{ path('statut_edit', {'id': statut.id}) }}"><i class="icon-pencil-1"></i></a>
                    <a href="#" onclick="supprimerStatutEtudiant('{{ path('statut_delete', {'id': statut.id}) }}')"><i class="icon-trash"></i></a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        {% endif %}
        </tbody>
    </table>

    <div class="modal fade" id="delStatutEtudiant" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
      <div class="modal-dialog" role="document">
        <div class="modal-content">
          <div class="modal-header">
            <h5 class="modal-title" id="exampleModalLabel">Avertissement</h5>
            <button class="close" type="button" data-dismiss="modal" aria-label="Close">
              <span aria-hidden="true">x</span>
            </button>
          </div>
          <div class="modal-body">Etes vous sur de vouloir supprimer le staut d'étudiant ? </div>
          <div class="modal-footer">
            <button class="d-none d-sm-inline-block btn btn-sm btn-secondary shadow-sm bouton" type="button" data-dismiss="modal">Annuler</button>
            <a class="d-none d-sm-inline-block btn btn-sm btn-primary shadow-sm bouton" id = "BoutonSupprimerModale" href="#">Supprimer le statut d'étudiant</a>
          </div>
        </div>
      </div>
    </div>

    <script type="text/javascript">

    function supprimerStatutEtudiant(url) {
      $("#delStatutEtudiant").modal();
      document.getElementById("BoutonSupprimerModale").href = url;
    }

    </script>

{% endblock %}


{% block datatables %}

<script type="text/javascript">
$(document).ready(function() {
  $('#table').dataTable({
    language: {
      "url": "{{asset('tradfr.json')}}"
    },
    order: [
      [0, "asc"]
    ],
    columns: [null, {"orderable": false},null,{"orderable": false}],
    lengthMenu: [
      [10, 25, 50, -1],
      [10, 25, 50, "Tout"]
    ],
    info: false,
  });
});
</script>

{% endblock %}
