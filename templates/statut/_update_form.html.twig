{{ form_start(form) }}

<table align="center" class="table">
  <tbody>
    <tr>
      <td class="intitule"><label for="statut_nom" class="required">Nom</label></td>
      <td>{{ form_widget(form.nom) }}</td>
    </tr>
    <tr>
      <td class="intitule"><label for="statut_description" class="required">Description</label></td>
      <td>{{ form_widget(form.description) }}</td>
    </tr>
    <tr>
      <td class="intitule"><label for="statut_enseignant" class="required">Enseignant</label></td>
      <td>{{ form_widget(form.enseignant) }}</td>
    </tr>
  </tbody>
</table>

<h1 class="h4 mb-0 text-gray-800">Liste des étudiants a qui ajouter au statut</h1> <br>

<table class="table" id="etudAjout">
  <thead>
    <tr>
      <th>Nom</th>
      <th>Prénom</th>
      <th>Mail</th>
    </tr>
  </thead>
  <tbody>
    {% for etudiant in form.lesEtudiantsAAjouter %}
    {# store index of the category in a variable #}
    {% set index = etudiant.vars.value %}

    {# get entity object from its index in the Categories Field #}
    {% set entity = form.lesEtudiantsAAjouter.vars.choices[index].data %}
    <tr>
      <td>{{entity.nom}}</td>
      <td>{{entity.prenom}}</td>
      <td>{{entity.mail}}</td>
      <td>{{form_widget(form.lesEtudiantsAAjouter[index])}}</td>
    </tr>
    {% endfor %}

  </tbody>
</table>

<br> <h1 class="h4 mb-0 text-gray-800">Liste des étudiants a qui enlever le statut</h1> <br>

    <table class="table" id="etudSuppr">
      <thead>
        <tr>
          <th>Nom</th>
          <th>Prénom</th>
          <th>Mail</th>
        </tr>
      </thead>
      <tbody>
      {% for etudiant in form.lesEtudiantsASupprimer %}
      {# store index of the category in a variable #}
      {% set index = etudiant.vars.value %}

      {# get entity object from its index in the Categories Field #}
      {% set entity = form.lesEtudiantsASupprimer.vars.choices[index].data %}
      <tr>
        <td>{{entity.nom}}</td>
        <td>{{entity.prenom}}</td>
        <td>{{entity.mail}}</td>
        <td>{{form_widget(form.lesEtudiantsASupprimer[index])}}</td>
      </tr>
      {% endfor %}

      </tbody>
    </table>

<div class='bouton'>
  <a href="{{ path('statut_index') }}" class="d-none d-sm-inline-block btn btn-sm btn-secondary shadow-sm bouton">Annuler</a>
  <button class="d-none d-sm-inline-block btn btn-sm btn-primary shadow-sm">{{ button_label|default('Enregistrer') }}</button>
</div>



{{ form_end(form) }}
