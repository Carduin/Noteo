{% extends 'base.html.twig' %}

{% block tirePage %}Liste des Ã©valuations{% endblock %}

{% block evaluations %}active{% endblock %}

{% block contenu %}

    <table class="table" id="table">
        <thead>
            <tr>
                <th>Nom</th>
                <th>Date</th>
                <th>Moyenne</th>
                <th>Groupe</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
        {% if evaluations is not empty %}
        {% for evaluation in evaluations %}
            <tr>
                <td>{{ evaluation.nom }}</td>
                <td>{{ evaluation.date }}</td>
                <td> </td>
                <td>{{ evaluation.groupe.nom}}</td>
                <td>
                    <a href="{{ path('evaluation_show', {'id': evaluation.id}) }}"><i class="icon-eye"></i></a>
                    <a href="{{ path('evaluation_edit', {'id': evaluation.id}) }}"><i class="icon-pencil-1"></i></a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        {% endif %}
        </tbody>
    </table>

    <a href="{{ path('evaluation_new') }}">Create new</a>
{% endblock %}

{% block datatables %}

<script type="text/javascript">
$(document).ready(function() {
  $('#table').dataTable({
    language: {
      // Suppression du label Rechercher et ajout du placeholder
      search: "_INPUT_",
      searchPlaceholder: "Rechercher...",
      "url": "{{asset('tradfr.json')}}"
    },
    order: [
      [0, "asc"]
    ],
    lengthMenu: [
      [10, 25, 50, -1],
      [10, 25, 50, "Tout"]
    ],
    info: false,
  });
});
</script>

{% endblock %}
