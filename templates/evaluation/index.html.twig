{% extends 'base.html.twig' %}

{% if mine %}
  {% set texte = 'Liste de mes évaluations' %}
{% else %}
  {% set texte = 'Liste des autres évaluations' %}
{% endif %}

{% block titrePage %}{{texte}}{% endblock %}
{% block evaluations %}active{% endblock %}

{% block show %}show{% endblock %}

{% block mesEvaluations %}{% if mine %}active{% endif %}{% endblock %}
{% block autresEvaluations %}{% if not mine %}active{% endif %}{% endblock %}

{% block collapsed %}{% endblock %}

{% block contenu %}
{% if evaluations is not empty %}
{% if mine %}
<div class='bouton' align=center>
  <a class="d-sm-inline-block btn btn-sm btn-primary shadow-sm" href="{{ path('evaluation_choose_group', {'typeEval':'simple'}) }}">Créer une évaluation</a>
  <a class="d-sm-inline-block btn btn-sm btn-primary shadow-sm" href="{{ path('evaluation_choose_group', {'typeEval':'avec-parties'}) }}">Créer une évaluation avec des parties</a>
</div>
{% endif %}
<div class="table-responsive table-hover">
<table class="table" id="table">
  <thead>
    <tr>
      <th>Évaluation</th>
      <th>Date</th>
      <th>Moyenne</th>
      <th>Groupe</th>
      <th>Créateur</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    {% for evaluation in evaluations %}
      <tr>
        <td>{{ evaluation.nom }}</td>
        <td>{{ evaluation.date | date("d/m/Y") }}</td>
        <td>
          {# Calcul de la moyenne de chaque évaluation (calcul effectué sur la note globale à l'évaluation) #}
          {% set nbNotes = 0 %}
          {% set cumulNotes = 0 %}
          {% set resultat = 0 %}
          {% for note in evaluation.parties[0].notes %}
            {% set nbNotes = nbNotes + 1 %}
            {% set cumulNotes = cumulNotes + note.valeur %}
          {% endfor %}
          {% if nbNotes != 0 %}
            {% set resultat = cumulNotes / nbNotes %}
            {{ resultat|round(2) }}
          {% else %}
            {{ "N/A" }}
          {% endif %}
        </td>
        <td>{{ evaluation.groupe.nom }}</td>
        <td>{{ evaluation.enseignant.prenom }} {{ evaluation.enseignant.nom }}</td>
        <td>
          <a href="{{ path('evaluation_show', {'slug': evaluation.slug}) }}"><i class="icon-eye" data-toggle='tooltip' title="Consulter les notes pour {{ evaluation.nom }}"></i></a>
          <a {% if evaluation.enseignant == app.user or is_granted('ROLE_ADMIN') %} href="{{ path('evaluation_edit', {'slug': evaluation.slug}) }}" {% endif %}><i class="icon-pencil-1" data-toggle='tooltip' title="Modifier {{ evaluation.nom }}"></i></a>
          <a {% if evaluation.enseignant == app.user or is_granted('ROLE_ADMIN') %} href="{{ path('evaluation_delete', {'slug': evaluation.slug}) }}" onclick="EcritureModale('{{ path('evaluation_delete', {'slug': evaluation.slug}) }}')" data-toggle='modal' {% endif %}><i class="icon-trash" data-toggle='tooltip' title="Supprimer {{ evaluation.nom }}"></i></a>
        </td>
      </tr>
    {% endfor %}
  </tbody>
</table>
</div>
{% else %}
  <div class="info">
    <h1 class="h4 mb-0 text-gray-800">{% if mine %}Vous n'avez{% else %}Les autres enseignants n'ont{% endif %} aucune évaluation</h1>
  </div>
{% if mine %}
  <div class='bouton' align=center>
    <a class="d-sm-inline-block btn btn-sm btn-primary shadow-sm" href="{{ path('evaluation_choose_group', {'typeEval':'simple'}) }}">Créer une évaluation</a>
    <a class="d-sm-inline-block btn btn-sm btn-primary shadow-sm" href="{{ path('evaluation_choose_group', {'typeEval':'avec-parties'}) }}">Créer une évaluation avec des parties</a>
  </div>
{% endif %}

{% endif %}

<div class="modal fade" id="delEval" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Avertissement</h5>
        <button class="close" type="button" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">x</span>
        </button>
      </div>
      <div class="modal-body">
        Êtes-vous sur de vouloir supprimer cette évaluation ? <br>
        Toutes les notes associées seront supprimées.
      </div>
      <div class="modal-footer">
        <a class="d-sm-inline-block btn btn-sm btn-primary shadow-sm" id="BoutonSupprimerModale" href="#">Supprimer l'évaluation</a>
      </div>
    </div>
  </div>
</div>

{% endblock %}

{% block javascripts %}

<script type="text/javascript">
  /* Cette fonction est utilisée pour adapter le href du bouton de confirmation de la suppression
d'une évaluation dans la fenetre modale, afin de s'adapter a l'évaluation que l'on veut supprimer */
  function EcritureModale(url) {
    $("#delEval").modal(); //On fait apparaitre la fenêtre modale
    document.getElementById("BoutonSupprimerModale").href = url; //On réécrit le href du bouton de suppression avec l'url correspondante a l'évaluation dont on a cliqué sur la corbeille
  }
</script>

{% endblock %}

{% block datatables %}

<script type="text/javascript">
  $(document).ready(function() {
    $('#table').dataTable({
      language: {
        // Suppression du label Rechercher et ajout du placeholder
        search: "_INPUT_",
        searchPlaceholder: "Rechercher...",
        "url": "{{asset('tradfr.json')}}"
      },
      columns: [null, null, null, null, null, {"orderable": false}],
      order: [
        [1, "desc"]
      ],
      lengthMenu: [
        [15, 30, 45, -1],
        [15, 30, 45, "Tout"]
      ],
      pageLength : {{ app.user.preferenceNbElementsTableaux }}, <!-- Pour que le nombre d'éléments affichés par défaut soit celui de la préference de l'utilisateur -->
      info: false,
      columnDefs: [{
        "sType": "date-eu",
        targets: 1
      }]
    });
  });
</script>

{% endblock %}
