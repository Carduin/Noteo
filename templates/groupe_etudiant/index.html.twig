{% extends 'base.html.twig' %}

{% block tirePage %}Liste des groupes{% endblock %}

{% block groupes %}active{% endblock %}

{% block contenu %}

    <table class="table" id="table">
        <thead>
            <tr>
                <th>Nom</th>
                <th>Effectif</th>
                <th>Description</th>
                <th>Créateur</th>
                <th></th>
            </tr>
        </thead>
        {% if arbre is not empty %}
        <tbody>
        <tr>
          <td>{{ arbre[0].nom }}</td>
          <td>{{ infos[arbre[0].id].Effectif }}</td>
          <td>{{ arbre[0].description }}</td>
          <td>{{ infos[arbre[0].id].Prenom }} {{ infos[arbre[0].id].Nom }}</td>
          <td>
              <a href="{{ path('groupe_etudiant_show', {'id': arbre[0].id}) }}"><i class="icon-eye"></i></a>
              <a href="{{ path('groupe_etudiant_edit', {'id': arbre[0].id}) }}"><i class="icon-pencil-1"></i></a>
              <a href="{{ path('groupe_etudiant_delete', {'id': arbre[0].id}) }}"><i class="icon-trash"></i></a>
          </td>
        </tr>
        {% for semestre in arbre[0].__children %}
        <tr>
            <td>&emsp;{{ semestre.nom }}</td>
            <td>{{ infos[semestre.id].Effectif}}</td>
            <td>{{ semestre.description }}</td>
            <td>{{ infos[semestre.id].Prenom }} {{ infos[semestre.id].Nom }}</td>
            <td>
                <a href="{{ path('groupe_etudiant_show', {'id': semestre.id}) }}"><i class="icon-eye"></i></a>
                <a href="{{ path('groupe_etudiant_edit', {'id': semestre.id}) }}"><i class="icon-pencil-1"></i></a>
                <a href="{{ path('groupe_etudiant_delete', {'id': arbre[0].id}) }}"><i class="icon-trash"></i></a>
            </td>
        </tr>
            {% for td in semestre.__children %}
            <tr>
                <td>&emsp;&emsp; {{ td.nom }}</td> <!--&emsp; permet d'ajouter 4 espaces pour faire une sorte d'indentation-->
                <td>{{ infos[td.id].Effectif}}</td>
                <td>{{ td.description }}</td>
                <td> {{ infos[td.id].Prenom }} {{ infos[td.id].Nom }}</td>
                <td>
                    <a href="{{ path('groupe_etudiant_show', {'id': td.id}) }}"><i class="icon-eye"></i></a>
                    <a href="{{ path('groupe_etudiant_edit', {'id': td.id}) }}"><i class="icon-pencil-1"></i></a>
                    <a href="{{ path('groupe_etudiant_delete', {'id': arbre[0].id}) }}"><i class="icon-trash"></i></a>
                </td>
            </tr>
                {% for tp in td.__children %}
                <tr>
                    <td>&emsp;&emsp;&emsp; {{ tp.nom }}</td>
                    <td>{{ infos[tp.id].Effectif}}</td>
                    <td>{{ tp.description }}</td>
                    <td>{{ infos[tp.id].Prenom }} {{ infos[tp.id].Nom }}</td>
                    <td>
                        <a href="{{ path('groupe_etudiant_show', {'id': tp.id}) }}"><i class="icon-eye"></i></a>
                        <a href="{{ path('groupe_etudiant_edit', {'id': tp.id}) }}"><i class="icon-pencil-1"></i></a>
                        <a href="{{ path('groupe_etudiant_delete', {'id': arbre[0].id}) }}"><i class="icon-trash"></i></a>
                    </td>
                </tr>
                {% endfor %}

            {% endfor %}

        {% endfor %}

        </tbody>
        {% endif %}
    </table>

    <a href="{{ path('groupe_etudiant_new') }}" class="d-none d-sm-inline-block btn btn-sm btn-primary shadow-sm">Créer un groupe</a>

{% endblock %}

{% block datatables %}

<script type="text/javascript">
$(document).ready(function() {
  $('#table').dataTable({
    aaSorting: [], // Pour désactiver le tri automatique
    language: {
      "url": "{{asset('tradfr.json')}}"
    },
    columns: [null, null, {"orderable": false}, null, {"orderable": false}],
    lengthMenu: [
      [10, 25, 50, -1],
      [10, 25, 50, "Tout"]
    ],
    info: false,
  });
});
</script>

{% endblock %}
