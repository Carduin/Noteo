{{ form_start(form) }}

<table align="center" class="table">
  <tbody>
    <tr>
      <th class="intitule"><label for="groupe_etudiant_nom" class="required">Nom</label></th>
      <td class="champ">{{ form_widget(form.nom) }}</td>
    </tr>
    <tr>
      <th class="intitule"><label for="groupe_etudiant_description" class="required">Description</label></th>
      <td class="champ">{{ form_widget(form.description) }}</td>
    </tr>
    <tr>
      <th class="intitule"><label for="groupe_etudiant_estEvaluable" class="required">Évaluable</label> <a href="#HelpEvaluable" data-toggle='modal' data-target='#HelpEvaluable'><i class="icon-help-circled"></i></a></th>
      <td class="champ">{{form_widget(form.estEvaluable, {'data' : true})}}</td>
    </tr>
    <tr>
      <th class="intitule"><label for="groupe_etudiant_fichier" class="required">Fichier CSV</label> (<a href="/template.csv">Télécharger un modèle</a>)</th>
      <td class="champ">{{form_widget(form.fichier)}}</td>
    </tr>
    <tr>
      <th class="intitule"><label class="required" for="groupe_etudiant_enseignant">Enseignant (temporaire)</label></th>
      <td class="champ">{{form_widget(form.enseignant)}}</td>
    </tr>
  </tbody>
</table>

<div class='bouton'>
  <a href="{{ path('groupe_etudiant_index') }}" class="d-none d-sm-inline-block btn btn-sm btn-secondary shadow-sm">Annuler</a>
  <button class="d-none d-sm-inline-block btn btn-sm btn-primary shadow-sm">{{ button_label|default('Créer le groupe') }}</button>
</div>

{{ form_end(form) }}
