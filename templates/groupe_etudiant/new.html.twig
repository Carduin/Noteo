{% extends 'base.html.twig' %}

{% block titrePage %}Importer un groupe d'étudiants{% endblock %}

{% block groupes %}active{% endblock %}

{% block contenu %}
    {{ include('groupe_etudiant/_ajout_haut_niveau_form.html.twig') }}
{% endblock %}

{% block javascripts %}
    <script>
        /* Cette fonction est utilisée pour faire apparaitre le nom du fichier importé
        dans le input type file du formulaire. Elle est nécéssaire à cause du CSS de Boostrap.
        */
        $(".custom-file-input").on("change", function () {
            var fileName = $(this).val().split("\\").pop();
            $(this).siblings(".custom-file-label").addClass("selected").html(fileName);
        });
    </script>
{% endblock %}
